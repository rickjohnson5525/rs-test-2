<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:env="urn:import:org.rstudio.studio.client.workbench.views.environment.view">
    <ui:style type="org.rstudio.studio.client.workbench.views.environment.view.MemoryUsageSummary.Style">
        .pieLabel {
            font-size: 14pt;
            font-weight: bold;
        }

        .swatch {
            height: 10px;
            width: 10px;
            border: 1px solid #909090;
            border-radius: 2px;
        }

        .header {
            font-size: 18pt;
            font-weight: bold;
            margin-bottom: 15px;
            margin-top: 0;
            margin-left: 25px;
        }

        .stats {
            margin-bottom: 20px;
        }

        .stats thead th {
            border-bottom: 1px solid #808080;
        }

        .stats thead th.legend {
            border-bottom: none;
        }

        .stats th {
            text-align: left;
        }

        .stats td, .stats th {
            padding: 4px;
        }

        .kbCell {
            text-align: right;
        }

        .left {
            padding-right: 20px;
            padding-left: 10px;
        }

        .right {
            padding-right: 10px;
        }

        .pieLegend {
            text-align: center;
        }

        .pieLegendBox {
            width: 100%;
        }
    </ui:style>
    <g:HorizontalPanel>
        <g:cell>
            <g:VerticalPanel styleName="{style.left}">
                <g:cell>
                    <env:MemoryUsagePieChart title="Memory usage" ui:field="pie_" />
                </g:cell>
                <g:cell>
                    <g:VerticalPanel styleName="{style.pieLegendBox}">
                        <g:Label styleName="{style.pieLabel} {style.pieLegend}" text="50%" ui:field="pieLabel_"></g:Label>
                        <g:Label styleName="{style.pieLegend}" text="memory in use"></g:Label>
                    </g:VerticalPanel>
                </g:cell>
            </g:VerticalPanel>
        </g:cell>
        <g:cell>
            <g:VerticalPanel styleName="{style.right}">
                <g:HTMLPanel ui:field="stats_">
                </g:HTMLPanel>
            </g:VerticalPanel>
        </g:cell>
    </g:HorizontalPanel>
</ui:UiBinder>
